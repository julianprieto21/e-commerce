---
import ShirtIcon from "./icons/ShirtIcon.astro";

const { category } = Astro.props;
---

<figure>
  <a href={`/${category.id}`}>
    <div
      class="w-full rounded-3xl shadow-2xl bg-color-300 grid place-content-center hover:scale-105 transition"
    >
      <ShirtIcon />
    </div>
    <div>
      <h3 class="pt-4 pl-3 mt-1 text-lg font-medium leading-6 text-color-500">
        {category.name}
      </h3>
    </div>
  </a>
</figure>
