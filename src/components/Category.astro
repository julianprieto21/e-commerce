---
import ShirtIcon from "./icons/ShirtIcon.astro";

const { category } = Astro.props;
---

<figure>
  <a href={`/${category.id}`}>
    <picture
      class="w-full rounded-3xl shadow-2xl bg-color-300 grid place-content-center hover:scale-105 transition"
    >
      <!-- <ShirtIcon /> -->
      <img src={category.logoSrc} alt={category.name} class="w-[1280px] h-[360px] aspect-auto rounded-3xl" />
  </picture>
    <div>
      <h3 class="pt-4 pl-3 mt-1 text-2xl font-medium leading-6 text-color-500">
        {category.name}
      </h3>
    </div>
  </a>
</figure>
